<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="650dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_height="900dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewYuksekPuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#51CA3B"
                android:text="YÃ¼ksek Puan"
                android:textSize="70dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/puanim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageViewEkstraSure"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:background="#587CC3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_replay_30_24" />

            <ImageView
                android:id="@+id/imageViewYenidenOyna"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:background="#587CC3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_baseline_refresh_24" />

            <TextView
                android:id="@+id/yenidenOyna"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginStart="24dp"
                android:gravity="center"
                android:text="@string/yeniden_oyna"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewYenidenOyna"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/ekstraSureKazan"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="@string/ekstra_sure"
                android:textColor="@color/black"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageViewEkstraSure"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/enYuksekPuan"
                android:layout_width="550dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="@string/en_yuksek_puan"
                android:textColor="@color/black"
                android:textSize="50dp"

                app:layout_constraintBottom_toTopOf="@+id/textViewYuksekPuan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/puanim"
                android:layout_width="380dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="@string/puanim"
                android:textColor="@color/black"
                android:textSize="50dp"
                app:layout_constraintBottom_toTopOf="@+id/puanGoster"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/puanGoster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="136dp"
                android:text="Normal Puan"
                android:textColor="#8449E1"
                android:textSize="70dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>